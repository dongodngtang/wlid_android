<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_relate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/set_sel"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/record_bird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/deep_gray"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/record_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/record_bird"
        android:layout_alignBottom="@id/record_bird"
        android:layout_toRightOf="@id/record_bird"
        android:contentDescription="@null"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:src="@drawable/polaroid" />
    
    <TextView
        android:id="@+id/record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/record_bird"
        android:layout_alignBottom="@id/record_bird"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/deep_gray"
        android:textSize="15sp" />
