<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:axure="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <net.doyouhike.app.wildbird.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        axure:title_txt_color="@color/white"
        axure:left_src="@drawable/ic_back_white"
        axure:bg_root="@color/black"
        axure:m_title="浏览图片" />

    <android.support.v4.view.ViewPager
        android:layout_below="@id/titleview"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include
        android:layout_alignParentBottom="true"
        layout="@layout/layout_bird_picture_view"
        android:layout_height="50dp"
        android:layout_width="match_parent" />
</RelativeLayout>