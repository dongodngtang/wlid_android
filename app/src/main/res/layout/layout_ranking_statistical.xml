<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:layout_height="@dimen/ranking_statistical_height"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/iv_ranking_statistical_avatar"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:src="@drawable/avatar"
    android:layout_width="65dp"
    android:layout_height="65dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ranking_statistical_name"
                android:textSize="@dimen/app_txt_content"
                android:text="未登陆"
                android:textColor="#FF1A1A1A"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_ranking_statistical_location"
                android:drawableLeft="@drawable/ic_ranking_location"
                android:visibility="gone"
                android:text=""
                android:textSize="@dimen/app_txt_content_sub"
                android:drawablePadding="2dp"
                android:textColor="#42000000"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/app_txt_content_sub"
                android:text="排名"
                android:textColor="#42000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_ranking_statistical_rank"
                android:textSize="@dimen/app_txt_content_sub"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#FF1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/app_txt_content_sub"
                android:text="通过审核鸟种数"
                android:layout_marginLeft="15dp"
                android:textColor="#42000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_ranking_statistical_kind"
                android:textSize="@dimen/app_txt_content_sub"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textColor="#FF1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>