<?xml version="1.0" encoding="utf-8"?>
<net.doyouhike.app.library.ui.widgets.XSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vi_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.doyouhike.app.library.ui.widgets.LoadMoreListView
        android:id="@+id/lv_load_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"/>
</net.doyouhike.app.library.ui.widgets.XSwipeRefreshLayout>