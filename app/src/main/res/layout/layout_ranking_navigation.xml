<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ranking_navigation_height"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/ranking_navigation_content_height"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/vi_ranking_navigation_index_left"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_ranking_navi_index"/>

            <TextView
                android:id="@+id/tv_ranking_navigation_title_left"
                android:textSize="@dimen/app_txt_content_sub"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@color/txt_ranking_navi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="总榜" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/ranking_navigation_content_height"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/vi_ranking_navigation_index_right"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_ranking_navi_index" />

            <TextView
                android:id="@+id/tv_ranking_navigation_title_right"
                android:textSize="@dimen/app_txt_content_sub"
                android:textColor="@color/txt_ranking_navi"
                android:gravity="center"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="年榜" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/app_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>