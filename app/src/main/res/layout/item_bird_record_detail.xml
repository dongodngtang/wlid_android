<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="44dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/timeline_view_width"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/vi_time_line_width"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/my_record_timeline_line" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vi_bird_detail_parent"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/record_detail_sel"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bird_record_avatar"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/avatar"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/tv_bird_record_name"
            android:clickable="true"
            android:textSize="@dimen/app_txt_content_sub"
            android:textColor="@color/app_txt_content_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_bird_record_count"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/app_txt_content_sub"
            android:textColor="@color/app_txt_content_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_bird_record_bird_img"
            android:layout_marginRight="5dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/polaroid" />
    </LinearLayout>
</LinearLayout>