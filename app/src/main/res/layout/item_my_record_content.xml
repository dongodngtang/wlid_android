<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="53dp"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/vi_time_line_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/my_record_timeline_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_my_record_timeline_indicate_content" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_myrecord_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:longClickable="true"
        android:layout_marginRight="@dimen/my_record_item_paddingleft"
        android:padding="10dp"
        android:background="@drawable/record_detail_sel"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_myrecord_bird_info"
                    android:text="sdfs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_item_myrecord_time"
                        android:text="2016-04-19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#bfbfbf"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_item_myrecord_location"
                        android:drawablePadding="2dp"
                        android:layout_marginLeft="10dp"
                        android:text="深圳市"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_ranking_location"
                        android:maxLength="6"
                        android:textColor="@color/app_txt_content_tint"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_myrecord_small_picture"
            android:src="@drawable/u114"
            android:scaleType="centerCrop"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

</LinearLayout>