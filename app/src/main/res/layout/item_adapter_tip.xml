<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/app_txt_content_tint"
        android:textSize="17sp" />

    <net.doyouhike.app.library.ui.proccess.CircularProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="@dimen/common_load_more_progress_size"
        android:layout_height="@dimen/common_load_more_progress_size"
        android:indeterminate="true"
        android:indeterminateOnly="false"
        android:visibility="gone"
        app:cpb_color="@color/app_theme" />
</LinearLayout>