<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent">

    <LinearLayout 
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/tab_bg"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/search_tab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="速查"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:textColor="@drawable/deepcyan_word_sel"
            android:drawableTop="@drawable/sucha_sel"/>
        <TextView
            android:id="@+id/add_tab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="添加"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:textColor="@drawable/deepcyan_word_sel"
            android:drawableTop="@drawable/add_sel"/>
        <TextView 
            android:id="@+id/discovery_tab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:drawablePadding="2dp"
            android:text="发现"
            android:gravity="center_horizontal|bottom"
            android:textColor="@drawable/deepcyan_word_sel"
            android:drawableTop="@drawable/discovery_sel"/>
        <TextView
            android:id="@+id/mine_tab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="我的"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal|bottom"
            android:textColor="@drawable/deepcyan_word_sel"
            android:drawableTop="@drawable/mine_sel"/>
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_bottom"/>

</RelativeLayout>