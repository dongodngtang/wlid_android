<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/timeline_view_width"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/vi_time_line_width"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/my_record_timeline_line" />


        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_my_record_timeline_indicate_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/record_detail_sel"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_item_bird_record_city"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/app_txt_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/app_txt_content_normal" />

        <ImageView
            android:id="@+id/iv_item_item_bird_record_indicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_left_sel" />
    </LinearLayout>
</LinearLayout>