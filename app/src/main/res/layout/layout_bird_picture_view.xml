<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vi_bird_picture_user_info"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_bird_picture_avatar"
            android:src="@drawable/avatar"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bird_picture_user_name"
                android:textSize="@dimen/app_txt_content_sub"
                android:textColor="@color/white"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_bird_picture_date"
                android:textSize="10sp"
                android:text=""
                android:textColor="#8AFFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:drawableLeft="@drawable/ic_location_white"
            android:id="@+id/tv_bird_picture_location"
            android:drawablePadding="2dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/app_txt_content_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include layout="@layout/layout_dividing_line"/>
</RelativeLayout>