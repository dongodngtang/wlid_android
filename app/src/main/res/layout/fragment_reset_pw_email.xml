<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:axure="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.doyouhike.app.wildbird.ui.login.ResetPwEmailFragment">

    <net.doyouhike.app.wildbird.ui.view.LineEditText
        android:id="@+id/et_rspw_em_fg_email"
        axure:drawableRight="@drawable/input_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_bg"
        android:hint="请输入邮箱"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/deep_gray"
        android:textColorHint="@color/gray"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btn_rspw_em_fg_submit"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/sure_sel"
        android:gravity="center"
        android:padding="10dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="21sp" />

</LinearLayout>
